{
    "compilerOptions": {
        "outDir": "build",
        "module": "commonjs",
        "target": "es2020",
        "lib": ["es6", "dom", "es2020"],
        "moduleResolution": "node",
        "sourceMap": true,
        // "watch": true,
        "sourceRoot": "src",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "types": ["reflect-metadata"],
        "preserveConstEnums": true,
        "forceConsistentCasingInFileNames": false,
        "allowUnreachableCode": true,
        "jsx": "preserve",
        "allowJs": true,
    },
    "include": [
        "src/*",
        "src/*/*",
        "src/jobs/*.ts",
        "src/tests/*/*.ts",
        "src/tests/*", "src/infrastructure/data/connProvider.ts" 
    ],
    "exclude": [
        "node_modules"
    ]
}